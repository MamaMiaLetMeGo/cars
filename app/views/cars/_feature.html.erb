<div class="container">
    <h1 style="text-align:center">
      <%= link_to "Featured Cars", root_path %>
    </h1>
</div>
<% @cars.each do |car| %>
  <div class="container">
    <div class="row">
      <%= form_with(model: car, local: true) do |form| %>
      <div class="col">
        <div class="form-group row">
          <div class="col">
            <%= form.text_field :title, class:'form-control' %>
          </div>
          <div class="col-form-label">
            <%= form.label "Feature", class: 'col-form-label' %>
          </div>
          <div class="col"
            <%= form.check_box :feature, class:'form-control' %>
          </div>
          <div class="col">
            <%= form.submit "Update" %>
          </div>
        </div>
      </div>
      <% end %>
      <div class="col">
        <%= link_to "Delete", car, method: :delete, data: {confirm: "Are you sure you want to delete the listing?"}, class:'btn btn-danger' %>
      </div>
    </div>
  </div>
<% end %>