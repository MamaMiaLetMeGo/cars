<div class="container">
    <h1><%= link_to @make_name, root_path %></h1>
    <div id="cars">
        <% @cars.each do |car| %>
        <% if car.thumbnail.attached? %>
        <div class="item">
            <%= link_to image_tag(car.resized_thumbnail), car_path(car, make: @make_name, order: @order) %>
            <span class="caption">
            <%= link_to car.title, car %><p>
            Color: <%= link_to car.color, car %> 
            Price: $<%= link_to car.price, car %><br>
            Year: <%= link_to car.year, car %>
            State: <% car.states.each do |state| %>
                    <%= link_to state.state, root_path(state: state.state) %>
                  <% end %>
            <% else %>
            <div style="width: 240px; height: 135px">
                <%= link_to car.title, car %>
            </div>
            <% end %>
        </div>
        <% end %>
    </div>
</div>